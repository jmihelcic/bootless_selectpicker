.bootless-select
  display inline-block
  height 32px
  
  // Select Button
  .select-dropdown
    display inline-block
    overflow hidden
    min-width 120px
    height 32px
    border 1px solid silver
    cursor pointer
  
  .dropdown-text,
  .dropdown-icon
    display block
    height 30px
    padding 0 5px
    line-height 30px
  
  .dropdown-text
    float left
    width calc(100% - 30px)
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    
  .dropdown-icon
    float right
    width 30px
    height 30px
    background-color red
    
  // Select Menu    
  .select-menu
    display inline-block
    position absolute
    border 1px solid silver
    overflow-y auto
    background-color white
    
  .select-menu.closed
    display none
  
  // Menu Groups
  .menu-group
    display block
    
  // Group Options
  .group-option
    display block
    width 100%
    height 30px
    cursor pointer
    
  .option-text
    display block
    height 30px
    padding 0 5px
    line-height 30px
    
  .option-text
    float left
    width 100%
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
        
    

